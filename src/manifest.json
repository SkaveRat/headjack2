{
  "name": "Matrix Headjack",
  "description": "Matrix.org desktop app",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "bower_components/angularjs/angular.js",
        "bower_components/jquery/dist/jquery.js",
        "node_modules/q/q.js",
        "bower_components/matrix-js-sdk/dist/browser-matrix-dev.js",
        "js/services/accountmanager-service.js",
        "js/services/eventhandler-service.js",
        "js/services/chrome-message-service.js",
        "js/services/mx-service.js",
        "js/services/mxsession-service.js",
        "js/services/mxroom-service.js",
        "js/background.js"
      ]
    }
  },
  "icons": {"16": "logo-16.png"},
  "permissions": [
    "storage",
    "<all_urls>"
  ]
}